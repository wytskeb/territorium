<ScrollViewPuzzles@ScrollView>:
    size_hint: (None, None)
	size: (200, 450)
	pos_hint: {'center_x': .5, 'center_y': .6}

    StackLayoutPuzzles:
        # left-right top-bottom
        # orientation: "bt-lr"
        # padding: ("0dp", "0dp", "0dp", "0dp")
        # padding_hint: .3, .3, .3, .3
        spacing: "0dp", "0dp"
        size_hint: 1, None
        height: self.minimum_height


<StackLayoutPuzzles>:


<VolgordePuzzlesWindow>:
    name: "volgorde"

    FloatLayout:

        ScrollViewPuzzles:

    Label:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: "Volgorde"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "top":1}

    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        # text: root.parent.menu_button_title
        pos_hint: { "center_x": .5, "center_y": .3}
        size_hint: .5, .05
        # on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85
        text: "Puzzels"
        on_release:
            root.manager.transition.direction = "right"
            root.puzzle_page_button()

