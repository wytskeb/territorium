<SchuifPuzzlesWindow>:
    name: "schuifpuzzle"

    FloatLayout:
        size: root.width, root.height/2

        Label:
            font_size: dp(30)
            font_name: 'fonts/Eurostile.ttf'
            text: "blub"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1}

        Label:
            id: opdrachttekst
            multiline: True
            font_size: dp(20)
            font_name: 'fonts/Eurostile.ttf'
            text: "... tekst laden ..."
            size_hint: 0.5, 0.2
            pos_hint: {"x":0.1, "top":0.75}

        Button:
            font_size: dp(30)
            font_name: 'fonts/Eurostile.ttf'
            # text: root.parent.menu_button_title
            pos_hint: { "center_x": .5, "center_y": .3}
            size_hint: .5, .05
            # on_press: root.parent.on_menu_button_pressed()
            background_normal: ''
            background_color: 1, .3, .4, .85
            text: "Verbum"
            on_release:
                root.manager.transition.direction = "right"
                root.verbum_page_button()


<ScrollViewPuzzles@ScrollView>:
    size_hint: (None, None)
	size: (200, 425)
	pos_hint: {'center_x': .5, 'center_y': .6}

    StackLayoutPuzzles:
        # left-right top-bottom
        # orientation: "bt-lr"
        # padding: ("0dp", "0dp", "0dp", "0dp")
        # padding_hint: .3, .3, .3, .3
        spacing: "0dp", "0dp"
        size_hint: 1, None
        height: self.minimum_height


